{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["*.md", "*.markdown", "*.mdx"],
      "options": {
        "printWidth": 100,
        "proseWrap": "preserve",
        "tabWidth": 2,
        "useTabs": false,
        "parser": "markdown"
      }
    }
  ]
}