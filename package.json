{
	"name": "obsidian-lint-and-format",
	"version": "0.1.0",
	"description": "Advanced linting and formatting tools for Markdown files in Obsidian",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"lint",
		"format",
		"markdown"
	],
	"author": "Md. Sazzad Hossain Sharkar <https://szd.sh/>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/devops-infinity/obsidian-lint-and-format"
	},
	"dependencies": {
		"prettier": "^3.6.2",
		"remark": "^15.0.1",
		"remark-lint": "^10.0.1",
		"remark-parse": "^11.0.0",
		"remark-stringify": "^11.0.0",
		"unified": "^11.0.5"
	},
	"devDependencies": {
		"@types/node": "^24.7.2",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.1",
		"@typescript-eslint/eslint-plugin": "^8.46.0",
		"@typescript-eslint/parser": "^8.46.0",
		"builtin-modules": "^5.0.0",
		"esbuild": "^0.25.10",
		"obsidian": "latest",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3"
	}
}
